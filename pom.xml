  <build>
    <resources>
      <resource>
	<targetPath>org/nomencurator/resources</targetPath>
	<directory>src/main/java/org/nomencurator/resources</directory>
	<includes>
	  <include>**/*.xml</include>
	  <include>**/*.properties</include>
	</includes>
      </resource>
      <resource>
	<targetPath>org/nomencurator/gui/swing</targetPath>
	<directory>src/main/java/org/nomencurator/gui/swing</directory>
	<includes>
	  <include>**/*.xml</include>
	  <include>**/*.properties</include>
	</includes>
      </resource>
      <resource>
	<targetPath>org/nomencurator/gui/swing/table</targetPath>
	<directory>src/main/java/org/nomencurator/gui/swing/table</directory>
	<includes>
	  <include>**/*.xml</include>
	</includes>
      </resource>
      <resource>
	<targetPath>org/nomencurator/gui/swing/tree</targetPath>
	<directory>src/main/java/org/nomencurator/gui/swing/tree</directory>
	<includes>
	  <include>**/*.xml</include>
	  <include>**/*.properties</include>
	</includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-compiler-plugin</artifactId>
	<version>3.8.1</version>
	<configuration>
	  <!-- 1.7? -->
	  <source>${java.version}</source>
	  <target>${java.version}</target>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
	  <encoding>UTF-8</encoding>
<!--	  <useIncrementalCompilation>true</useIncrementalCompilation> -->
	  <compilerArgs>
	    <arg>-Xlint</arg>
- 	    <arg>-Xdiags:verbose</arg>
	  </compilerArgs>
	</configuration>
      </plugin>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-jar-plugin</artifactId>
	<version>3.2.0</version>
	<configuration>
	  <archive>
            <manifest>
              <mainClass>org.nomencurator.gui.swing.Taxonaut</mainClass>
            </manifest>
          </archive>
	</configuration>
      </plugin>
      <plugin>
	<groupId>org.apache.maven.plugins</groupId>
	<artifactId>maven-assembly-plugin</artifactId>
	<version>3.2.0</version>
	<configuration>
          <finalName>Taxonaut-${project.version}</finalName>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <archive>
            <manifest>
              <mainClass>org.nomencurator.gui.swing.Taxonaut</mainClass>
            </manifest>
          </archive>
	</configuration>
	<executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal> <!-- goals == mojos -->
            </goals>
          </execution>
	</executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
	<configuration>
	  <killAfter>-1</killAfter>
          <mainClass>org.nomencurator.gui.swing.Taxonaut</mainClass>
	</configuration>
      </plugin>
    </plugins>
  </build>

